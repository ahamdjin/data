datasource db {
  provider   = "postgresql"
  url        = env("DATABASE_URL")
  extensions = [vector]
}

generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["postgresqlExtensions"]
}

model FhirResource {
  id           Int      @id @default(autoincrement())
  resourceType String
  data         Json
  embedding    Json
  patientId    String?
  encounterId  String?
  createdAt    DateTime @default(now())

  @@index([patientId])
}

model Secrets {
  id        Int      @id @default(autoincrement())
  source    String
  key       String
  value     String
  createdAt DateTime @default(now())

  @@unique([source, key])
}
