datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model FhirResource {
  id           Int      @id @default(autoincrement())
  resourceType String
  data         Json
  embedding    Vector   @db.Vector(1536)
  patientId    String?
  encounterId  String?
  createdAt    DateTime @default(now())

  @@index([patientId])
  @@index([embedding])
}

model Secrets {
  id        Int      @id @default(autoincrement())
  source    String
  key       String
  value     String
  createdAt DateTime @default(now())

  @@unique([source, key])
}
